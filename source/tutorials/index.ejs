<div class="content">
    <div class="container">
    <h1 class="mt-4 mb-3">MonoGame Tutorials</h1>
    <% tutorials.forEach((tutorial, i) => { %> 
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                            <img class="img-fluid rounded" src="<%= tutorial.opengraph.image %>" alt="">
                    </div>

                    <div class="col-lg-6">
                        <h2 class="card-title"><%= tutorial.title %></h2>
                        <p calss="card-text"><%= tutorial.short %></p>
                        <a href="/tutorials/<%= tutorial.fileName %>" class="btn btn-primary">Read More &rarr;</a>
                    </div>
                </div>
            </div>

            <div class="card-footer text-muted">
                Posted on <%= tutorial.date %>
            </div>
        </div>
    <% }) %>
    </div>
</div>